@model UserLogin
@{
    ViewBag.Title = "User Create";
    ViewBag.PageTitle = "User Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <form action="/MyUser/Create" method="post" class="row g-0">

                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label mb-2">User Name</label>
                            <input type="text" class="form-control" asp-for="Username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label mb-2">Password</label>
                            <input type="text" class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label mb-2">Select Role</label>
                            <select asp-for="Role" class="form-select">
                                <option value="">Select Role</option>
                                <option value="LandLords">LandLords</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-outline-primary">Submit</button>
                        <button type="reset" class="btn btn-danger ms-3">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    </script>
}
