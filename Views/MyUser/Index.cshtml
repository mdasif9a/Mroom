@model IEnumerable<UserLogin>
@{
    ViewBag.Title = "UserLogin";
    ViewBag.PageTitle = "UserLogin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}
<div class="card">
    <div class="card-header">
        <a href="/MyUser/Create" class="btn btn-success"><i class="bi bi-plus"></i> Add</a>
    </div>
    <div class="card-body table-responsive">
        <table id="myuser" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="text-nowrap">
                    <th>S. No</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="text-nowrap">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.Username</td>
                        <td>@item.Password</td>
                        <td>@item.Role</td>
                        <td>
                            <a href="/MyUser/Edit/@item.Id" class="text-purple me-2"><i class="bi bi-pencil"></i></a>
                            <a href="/MyUser/Delete/@item.Id" onclick="return confirm('Are you sure want to delete?')" class="text-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $('#myuser').DataTable({
            "scrollX": true
        });
    </script>
}
