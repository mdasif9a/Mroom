
@model IEnumerable<BankGov>
@{
    ViewBag.Title = "BankGov";
    ViewBag.PageTitle = "BankGov";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}
<div class="card">
    <div class="card-header">
        <a href="/DistanceMaster/BankGovCreate" class="btn btn-success"><i class="bi bi-plus"></i> Add</a>
    </div>
    <div class="card-body table-responsive">
        <table id="bankgov" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="text-nowrap">
                    <th>S. No</th>
                    <th>Country Name</th>
                    <th>State Name</th>
                    <th>City Name</th>
                    <th>BankGov Name</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="text-nowrap">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.CountryName</td>
                        <td>@item.StateName</td>
                        <td>@item.CityName</td>
                        <td>@item.Name</td>
                        <td>@item.Status</td>
                        <td>
                            <a href="/DistanceMaster/BankGovEdit/@item.Id" class="text-purple me-2"><i class="bi bi-pencil"></i></a>
                            <a href="/DistanceMaster/BankGovDelete/@item.Id" onclick="return confirm('Are you sure want to delete?')" class="text-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>

        $('#bankgov').DataTable({
            "scrollX": true
        });

    </script>
}

